// 解析时间戳
function timeSlice(time){
  var date = getDate(time * 1000);
  Y = date.getFullYear();
  M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1);
  D = date.getDate();
  h = date.getHours();
  m = (date.getMinutes() < 10 ? '0' + date.getMinutes() : date.getMinutes());
  return Y + '-' + M + '-' + M;
}

